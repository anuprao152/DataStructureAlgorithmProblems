<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/Blog.css")"  rel="stylesheet" />
    <title>Blog View</title>
</head>
<body>

<div class="BlogName"><h2>@ViewBag.BlogName</h2></div>
<div class="Blog">

    @foreach (var content in Model)
    {
        if (content.Paragraph != null)
        {
            @Html.Action("Index", "Paragraph", new { Id = content.Paragraph.Id })
        }
        else if (content.Heading != null)
        {
            <div>@Html.Action("Index","Header", new {Id = content.Heading.Id})</div>
        }
        else if (content.Bullet != null)
        {
            <div class="Bullet">@Html.Action("Index","Bullet", new {Id = content.Bullet.Id})</div>
        }
        @*else if (content.Image != null)
        {
            @Html.Action("Index", "Image", new { Id = content.Image.Id })
        }*@
        else if (content.Problem != null)
        {
             @Html.Action("ProblemSolutionPartialView", "Problem", new { id = content.Problem.Id })
        }
       
        
    }
</div>

